{{#extend "main"}}
  {{#content "style"}}
    <link rel="stylesheet" href="/css/text.css">
    {{#if styles}}
      {{#each styles as |style|}}
        <link rel="stylesheet" href="/css/{{style}}.css">
      {{/each}}
    {{/if}}
  {{/content}}
  {{#content "body"}}
    <article>
      <header>
          {{#if hide-title}}
            {{!-- no-op --}}
          {{else}}
            <h1>{{title}}</h1>
          {{/if}}
      </header>
      <div class="main">
        {{{contents}}}
      </div>
    </article>
  {{/content}}
{{/extend}}
